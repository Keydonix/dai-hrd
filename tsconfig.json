{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"lib": ["es2019", "esnext.bigint", "dom"],
		"typeRoots": [ "./node_modules/@types", "./typings" ]
	},
	"include": [
		"test/**/*.ts",
		"scripts/**/*.ts",
		"generated/**/*.ts",
		"typings/**/*.d.ts",
	],
}
