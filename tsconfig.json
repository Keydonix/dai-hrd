{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		// everything is terrible: truffle doesn't actually run .ts tests as TS, it just runs them as JS, which means no type signatures!
		"noImplicitAny": false,
		"lib": ["es2019", "esnext.bigint"],
		"types": ["truffle-typings"]
	},
	"include": [
		"test/**/*.ts",
		"types/**/*.ts",
	],
}
